<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="280dp"
    android:minHeight="280dp"
    android:background="@drawable/redeem_back"
    android:orientation="vertical"
    android:maxHeight="280dp"
    android:maxWidth="270dp"
    android:minWidth="270dp">

    <TextView
        android:layout_marginTop="22dp"
        android:id="@+id/redeemMoneyText"
        fontPath="fonts/ProximaNovaBold.otf"
        android:text="Cash out $43"
        android:textColor="#0f3345"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        fontPath="fonts/ProximaNovaBold.otf"
        android:textColor="#0f3345"
        android:gravity="center_horizontal"
        android:text="Please, fill the information field\nbelow and click the REDEEM button"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Min withdraw is $100"
        android:textSize="12sp"
        android:textColor="#ff6060"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/paypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/paypal" />

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/visa"
            android:layout_gravity="center_vertical"
            android:src="@drawable/visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:maxLength="100"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:id="@+id/emailText"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="#0f3345"
        android:hint="Paypal email address"
        android:textSize="16sp"
        android:background="@color/colorAccent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/redeem_dialog"
        android:layout_marginTop="12dp"
        android:id="@+id/redeemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>